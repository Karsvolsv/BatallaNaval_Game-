<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ethan.batallanaval.Controller.ControllerBattleship">
    <children>
        <!-- Contenedor StackPane para centrar el tablero -->
        <StackPane layoutX="20.0" layoutY="20.0" prefWidth="760.0" prefHeight="600.0">
            <!-- Grid para el tablero de batalla -->
            <GridPane fx:id="boardGrid" hgap="5" vgap="5">
                <!-- Las celdas del tablero se agregarán dinámicamente aquí -->
            </GridPane>
        </StackPane>

        <!-- HBox para los botones de los barcos -->
        <HBox fx:id="shipsContainer" layoutX="20.0" layoutY="630.0" spacing="10.0" alignment="CENTER" prefWidth="760.0">
            <!-- Los botones de los barcos se agregarán dinámicamente aquí -->
        </HBox>

        <!-- Contenedor de botones de acción (Iniciar, Reiniciar, Instrucciones) -->
        <HBox layoutX="20.0" layoutY="749.0" spacing="20.0" alignment="CENTER" prefWidth="760.0">
            <!-- Botón para reiniciar el juego -->
            <Button fx:id="resetButton" mnemonicParsing="false" onAction="#resetGame" text="Reiniciar Juego" />

            <!-- Botón para iniciar el juego -->
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#startGame" text="Iniciar Juego" />

            <!-- Botón para mostrar las instrucciones -->
            <Button fx:id="instructionsButton" mnemonicParsing="false" onAction="#showInstructions" text="Instrucciones" />
        </HBox>
    </children>
</AnchorPane>
